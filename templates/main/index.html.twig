{% extends 'base.html.twig' %}

{% block body %}
    <main class="div_container_flex">

{% include "_partials/_gallery.html.twig" %}
        <section class="row">

        
            <div class="col-12">
                <h1>Notre boutique en ligne</h1>
                <p>Une grande sélection de meubles de qualité et aux meilleurs prix</p>            
            </div>
            {% for category in categories %}
                {% if category.parent == null %}
                    <div class="col-12">
                        <h2>{{ category.name }}</h2>
                    </div>
                {% else %}
                    <div class="col-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h3 class="card-title">{{ category.name }}</h3>
                                <a href="{{ path('categories_list', {slug: category.slug}) }}" class="btn btn-primary">Voir les produits</a>
                            </div>
                        </div>
                    </div>    
                {% endif %}
            {% endfor %}
        </section>
    </main>
{% endblock %}
